<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/events_list_bg_tb"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/approved_client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="TextView"
            android:paddingTop="10dp"
            android:textColor="@color/fg_event_list_row"
            android:textSize="@dimen/fg_list_row_time" />

        <TextView
            android:id="@+id/approved_client_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:text="TextView"
            android:textColor="@color/fg_event_list_row"
            android:textSize="@dimen/fg_list_row_time" />

        <ImageView
            android:id="@+id/reject_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/crossbutton_tb" />

        <ImageView
            android:id="@+id/approved_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/reject_icon"
            android:src="@drawable/tickbutton_tb" />
    </RelativeLayout>

</RelativeLayout>