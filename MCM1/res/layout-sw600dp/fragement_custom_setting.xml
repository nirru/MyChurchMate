            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_border_rounded_table"
            android:minHeight="35dp"
            android:minWidth="200dp"
            android:weightSum="3" >

            <TextView
                android:id="@+id/ra_Step1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/calender_white_border_rounded_table"
                android:gravity="center"
                android:padding="3px"
                android:text="Step1"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/ra_Step2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/calender_white_border_rounded_table"
                android:gravity="center"
                android:text="Step2"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/ra_Step3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/calender_white_border_rounded_table"
                android:gravity="center"
                android:text="Step3"
                android:textColor="#fff" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linear_one"
            android:layout_marginTop="10dp" >

            <ScrollView
