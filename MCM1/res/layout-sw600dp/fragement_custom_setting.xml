                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/ra_editFName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/name_text"
                        android:ems="10"
                        android:hint="First Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="25dp" >
                    </EditText>

                    <EditText
                        android:id="@+id/ra_editSName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/name_text"
                        android:ems="10"
                        android:hint="Last Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="25dp" >
                    </EditText>

                    <EditText
                        android:id="@+id/ra_editEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/name_text"
                        android:ems="10"
                        android:hint="Date Of Birth"
                        android:inputType="date"
                        android:paddingLeft="25dp" >
                    </EditText>

                    <Spinner
                        android:id="@+id/la_profeesion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/centre_list"
                        android:gravity="center"
                        android:paddingLeft="20dp" />

                    <Spinner
                        android:id="@+id/la_maritalstatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/centre_list"
                        android:paddingLeft="20dp" />

                    <EditText
                        android:id="@+id/ra_editchildren"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/name_text"
                        android:ems="10"
                        android:hint="Children"
                        android:inputType="textPassword"
                        android:paddingLeft="25dp" >
                    </EditText>

                    <Spinner
                        android:id="@+id/la_nationality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/centre_list"
                        android:paddingLeft="20dp" />

