<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mds_layoutMemberDetailsSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:padding="0dp"
    android:weightSum="100" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/layout_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background" >

        <LinearLayout
            android:id="@+id/linear_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/white_border_rounded_table"
            android:minHeight="60dp"
            android:minWidth="350dp"
            android:weightSum="3" >

            <TextView
                android:id="@+id/ra_Step1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/calender_white_border_rounded_table"
                android:gravity="center"
                android:padding="3px"
                android:text="Step1"
                android:textColor="#fff"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/ra_Step2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/calender_white_border_rounded_table"
                android:gravity="center"
                android:text="Step2"
                android:textColor="#fff"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/ra_Step3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/calender_white_border_rounded_table"
                android:gravity="center"
                android:text="Step3"
                android:textColor="#fff"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linear_one"
            android:layout_marginTop="10dp" >

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rel_xyz"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="50dp"
                android:fillViewport="true"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="25dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Church App PIN is provided by your Church"
                        android:textColor="@color/textdesc"
                        android:textSize="@dimen/text_size" />

                    <EditText
                        android:id="@+id/ra_editAppPin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/name_text_tb"
                        android:ems="10"
                        android:hint="Enter Your Church AppPin"
                        android:inputType="number"
                        android:paddingLeft="25dp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="15dp"
                        android:text="App Registration Details"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/textdesc"
                        android:textSize="@dimen/text_size" />

                    <EditText
                        android:id="@+id/ra_editFName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/name_text_tb"
                        android:ems="10"
                        android:hint="First Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="25dp"
                        android:textSize="@dimen/edit_text_size" >
                    </EditText>

                    <EditText
                        android:id="@+id/ra_editSName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/name_text_tb"
                        android:ems="10"
                        android:hint="Sur Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="25dp"
                        android:textSize="@dimen/edit_text_size" >
                    </EditText>

                    <EditText
                        android:id="@+id/ra_editEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/email_text_tb"
                        android:ems="10"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="25dp"
                        android:textSize="@dimen/edit_text_size" >
                    </EditText>

                    <EditText
                        android:id="@+id/ra_editEmailConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/email_text_tb"
                        android:ems="10"
                        android:hint="Confirm Email"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="25dp"
                        android:textSize="@dimen/edit_text_size" >
                    </EditText>

                    <EditText
                        android:id="@+id/ra_editPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/password_text_tb"
                        android:ems="10"
                        android:hint="Enter Password"
                        android:inputType="textPassword"
                        android:paddingLeft="25dp"
                        android:textSize="@dimen/edit_text_size" >
                    </EditText>

                    <EditText
                        android:id="@+id/ra_editConfirmPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/password_text_tb"
                        android:ems="10"
                        android:hint="Confirm password"
                        android:inputType="textPassword"
                        android:paddingLeft="25dp"
                        android:textSize="@dimen/edit_text_size" >
                    </EditText>

                    <!--
                    <Spinner
                        android:id="@+id/ra_spSelectChurchMembership"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/centre_list_tb"
                        android:drawSelectorOnTop="true"
                        android:paddingLeft="25dp"
                        android:textSize="@dimen/edit_text_size"
                        android:prompt="@string/SelectMemberShip" />

                    <Spinner
                        android:id="@+id/ra_spMaleFemale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/centre_list_tb"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/gender_aray"
                        android:hint="Male/Female"
                        android:textSize="@dimen/edit_text_size"
                        android:paddingLeft="25dp"
                        android:prompt="@string/SelectSex" />
                    -->

                    <EditText
                        android:id="@+id/editText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:visibility="invisible" >
                    </EditText>

                    <EditText
                        android:id="@+id/editText2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:visibility="invisible" />
                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rel_xyz"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="50dp"
                android:fillViewport="true"
                android:visibility="invisible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="25dp"
                    android:orientation="vertical" >

                    <Spinner
                        android:id="@+id/ra_spSelectChurchMembership"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/centre_list_tb"
                        android:drawSelectorOnTop="true"
                        android:paddingLeft="25dp"
                        android:prompt="@string/SelectMemberShip"
                        android:textSize="@dimen/edit_text_size" />

                    <Spinner
                        android:id="@+id/ra_spMaleFemale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/centre_list_tb"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/gender_aray"
                        android:hint="Male/Female"
                        android:paddingLeft="25dp"
                        android:prompt="@string/SelectSex"
                        android:textSize="@dimen/edit_text_size" />

                    <EditText
                        android:id="@+id/ra_editMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/name_text_tb"
                        android:hint="Mobile"
                        android:inputType="phone"
                        android:paddingLeft="25dp"
                        android:textSize="@dimen/edit_text_size" >
                    </EditText>

                    <EditText
                        android:id="@+id/ra_editHomeTelephone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/name_text_tb"
                        android:ems="10"
                        android:hint="Home Telephone"
                        android:inputType="phone"
                        android:paddingLeft="25dp"
                        android:textSize="@dimen/edit_text_size" >
                    </EditText>

                    <EditText
                        android:id="@+id/editText3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:visibility="invisible" >
                    </EditText>

                    <EditText
                        android:id="@+id/editText4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:visibility="invisible" />
                </LinearLayout>
            </ScrollView>
            //////////////////////////////

            <ScrollView
                android:id="@+id/scrollView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rel_xyz"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="50dp"
                android:fillViewport="true"
                android:visibility="invisible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="25dp"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/ra_editCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/name_text_tb"
                        android:ems="10"
                        android:hint="Country"
                        android:paddingLeft="25dp"
                        android:singleLine="true"
                        android:textSize="@dimen/edit_text_size" >
                    </EditText>

                    <EditText
                        android:id="@+id/ra_editpostCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/name_text_tb"
                        android:ems="10"
                        android:hint="Post Code"
                        android:inputType="number"
                        android:paddingLeft="25dp"
                        android:singleLine="true"
                        android:textSize="@dimen/edit_text_size" >
                    </EditText>

                    <EditText
                        android:id="@+id/ra_editAddress1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/name_text_tb"
                        android:ems="10"
                        android:hint="Address1"
                        android:inputType="textPostalAddress"
                        android:paddingLeft="25dp"
                        android:singleLine="true"
                        android:textSize="@dimen/edit_text_size" >
                    </EditText>

                    <EditText
                        android:id="@+id/ra_editAddress2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/name_text_tb"
                        android:ems="10"
                        android:hint="Address2"
                        android:inputType="textPostalAddress"
                        android:paddingLeft="25dp"
                        android:singleLine="true"
                        android:textSize="@dimen/edit_text_size" >
                    </EditText>

                    <EditText
                        android:id="@+id/ra_editStreet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/name_text_tb"
                        android:ems="10"
                        android:hint="Street"
                        android:paddingLeft="25dp"
                        android:singleLine="true"
                        android:textSize="@dimen/edit_text_size" >
                    </EditText>

                    <EditText
                        android:id="@+id/ra_editTown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/name_text_tb"
                        android:ems="10"
                        android:hint="Town"
                        android:paddingLeft="25dp"
                        android:singleLine="true"
                        android:textSize="@dimen/edit_text_size" >
                    </EditText>

                    <EditText
                        android:id="@+id/ra_editCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/name_text_tb"
                        android:ems="10"
                        android:hint="City"
                        android:paddingLeft="25dp"
                        android:singleLine="true"
                        android:textSize="@dimen/edit_text_size" >
                    </EditText>

                    <EditText
                        android:id="@+id/ra_editDistrictCounty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/name_text_tb"
                        android:ems="10"
                        android:hint="District/County"
                        android:paddingLeft="25dp"
                        android:singleLine="true"
                        android:textSize="@dimen/edit_text_size" >
                    </EditText>

                    <EditText
                        android:id="@+id/ra_editState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/name_text_tb"
                        android:ems="10"
                        android:hint="State"
                        android:paddingLeft="25dp"
                        android:singleLine="true"
                        android:textSize="@dimen/edit_text_size" >
                    </EditText>

                    <EditText
                        android:id="@+id/editText3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:visibility="invisible" >
                    </EditText>

                    <EditText
                        android:id="@+id/editText4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:visibility="invisible" />
                </LinearLayout>
            </ScrollView>

            <RelativeLayout
                android:id="@+id/rel_xyz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/next_ID" >

                <TextView
                    android:id="@+id/ra_tvFormMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/next_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottom_Bar"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="visible" >

                <Button
                    android:id="@+id/ra_btnNextStep2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/blue_btn_tb"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bootom_ID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottom_Bar"
                android:layout_below="@+id/rel_xyz"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:visibility="invisible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <Button
                        android:id="@+id/ra_btnprevious"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:background="@drawable/blank_btn_tb"
                        android:text="Previous"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/ra_btnSubmit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:background="@drawable/blank_btn_tb"
                        android:text="Next"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>
            </RelativeLayout>
              //////////////////////////////////

            <RelativeLayout
                android:id="@+id/bootom_submit_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottom_Bar"
                android:layout_below="@+id/rel_xyz"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:visibility="invisible" >

                <LinearLayout
                    android:id="@+id/bt_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <Button
                        android:id="@+id/ra_btnprevious_stepthree"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:background="@drawable/blank_btn_tb"
                        android:text="Previous"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/ra_btnSubmit_stepthree"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:background="@drawable/blank_btn_tb"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottom_Bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bottom_banner_tb" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="Powered By"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>