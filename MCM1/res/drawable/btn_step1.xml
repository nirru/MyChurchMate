<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" 
    android:shape="rectangle"
    >
   <!-- view background color trans --> 
    <solid 
        android:color="#0000"
        
        />
   
    
    <!-- view bordercolor and width: set transparent  -->
     <stroke 
         android:width="1dp"
         android:color="#fff"
         
         /> 
     <!--  if u want to add some padding -->
       <padding
           android:left="0dp"
           android:right="0dp"
           android:top="0dp"
           android:bottom="0dp" 
           
           />  
      <!-- here is corner radius   -->
      <corners 
          android:topLeftRadius="0dp"
          android:bottomLeftRadius="0dp"
          android:topRightRadius="0dp"
          android:bottomRightRadius="0dp"
          />
       
</shape>
